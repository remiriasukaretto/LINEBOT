# Required
SECRET_KEY=replace_with_long_random_string
ADMIN_PASSWORD_HASH=replace_with_werkzeug_hash
CHANNEL_ACCESS_TOKEN=replace_with_line_channel_access_token
CHANNEL_SECRET=replace_with_line_channel_secret
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Security / runtime tuning
SESSION_COOKIE_SECURE=true
FORCE_HTTPS=true
ALLOWED_HOSTS=example.com
SESSION_IDLE_TIMEOUT_SECONDS=1800
LOGIN_MAX_ATTEMPTS=10
LOGIN_WINDOW_SECONDS=300
WEBHOOK_RATE_LIMIT_COUNT=120
WEBHOOK_RATE_LIMIT_WINDOW_SECONDS=60
MAX_TYPE_NAME_LENGTH=40
MAX_USER_MESSAGE_CHARS=100
DB_CONNECT_TIMEOUT=5

# Optional
OWNER_LINE_ID=
PORT=5000
